# Enable rewrite engine and route all non-file requests to index.html
RewriteEngine On
RewriteBase /

# If the request is for an existing file or directory, serve it normally
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Otherwise, route to index.html (SPA fallback)
RewriteRule ^ index.html [L]

# Optional: prevent directory listing
Options -Indexes
